<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.SpeakerDescriptionActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/speaker_info"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/speaker_artur_vasilov"
                        android:id="@+id/speaker_image"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/imageBorderColor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/flag_ru"
                        android:id="@+id/speaker_flag"
                        app:civ_border_width="2dp"
                        app:layout_constraintStart_toStartOf="@+id/speaker_image"
                        app:layout_constraintEnd_toEndOf="@+id/speaker_image"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="@+id/speaker_image"
                        app:layout_constraintBottom_toBottomOf="@+id/speaker_image"
                        app:layout_constraintVertical_bias="1.0"
                        app:civ_border_color="@color/speakerColor"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/speaker_name"
                        android:text="SPEAKER NAME"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/textColorSpeakerName"
                        android:layout_marginLeft="24dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/speaker_image"
                        app:layout_constraintStart_toEndOf="@+id/speaker_image"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintHorizontal_bias="0.0"
                />
                <TextView
                        android:text="Position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/speaker_position"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSpeakerInfo"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/speaker_name"
                        app:layout_constraintStart_toStartOf="@+id/speaker_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constrainedWidth="true"
                />
                <TextView
                        android:text="Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/speaker_location"
                        android:textColor="@color/textColorSpeakerName"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@+id/speaker_position"
                        app:layout_constraintStart_toStartOf="@+id/speaker_position"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintHorizontal_bias="0.0"
                />
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/links"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/speaker_location"
                        app:layout_constraintTop_toBottomOf="@+id/speaker_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/twitter"
                            android:layout_weight="1"
                            android:src="@drawable/link_twitter"
                            android:layout_marginRight="4dp"
                            android:visibility="gone"
                            android:layout_marginEnd="4dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/twitterColor"
                            app:civ_circle_background_color="@color/twitterColor"
                    />
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/telegram"
                            android:layout_weight="1"
                            android:src="@drawable/link_telegram"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:cropToPadding="false"
                            android:adjustViewBounds="false"
                            android:baselineAlignBottom="true"
                            android:visibility="gone"
                            app:civ_border_overlay="true"
                            app:civ_border_color="@color/telegramColor"
                            app:civ_border_width="1dp"
                            app:civ_circle_background_color="@color/telegramColor"
                    />
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/github"
                            android:layout_weight="1"
                            android:src="@drawable/link_github"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:visibility="gone"
                            app:civ_border_color="@color/githubColor"
                            app:civ_border_width="1dp"
                            app:civ_circle_background_color="@color/githubColor"
                    />
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/speaker_description"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/textColorSpeakerName"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lecture_info"
                        android:orientation="vertical"
                        android:background="@color/backgroundColor">

                    <TextView
                            android:text="Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/speaker_title"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/defaultTextColor"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"/>
                    <TextView
                            android:text="Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/speaker_address"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/defaultTextColor"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"/>
                    <Button
                            android:text="Label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/speaker_label"
                            android:textStyle="bold"
                            android:textColor="@color/buttonTextColor"
                            android:background="@color/androidColor"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"/>
                    <TextView
                            android:text="Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/speaker_date"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/defaultTextColor"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>